@model LostPets.Web.Areas.Administration.ViewModels.AdminComments.AdminPageableListCommentViewModel
@{
    ViewBag.Title = "All Comments";
}
<div class="container">
    <h1 class="text-center">All Comments</h1>
    <div class="row">
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Content</th>
                    <th>Posted by</th>
                    <th>Post Id</th>
                    <th>Post Title</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comment in Model.Comments)
                {
                    @Html.Partial("_AllPartial", comment)
                }
            </tbody>
        </table>
    </div>

    <div class="row text-center">
        <nav>
            <ul class="pagination">
                @if (Model.CurrentPage > 1)
                {
                    <li>
                        <a href="/Administration/AdminComments/All/@(Model.CurrentPage - 1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }
                @for (int i = 1; i < Model.TotalPages; i++)
                {
                    var className = string.Empty;
                    if (Model.CurrentPage == i)
                    {
                        className = "active";
                    }
                    <li class="@className"><a href="/Administration/AdminComments/All/@i">@i</a></li>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li>
                        <a href="/Administration/AdminComments/All/@(Model.CurrentPage+1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>